<RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#87ce"
                android:paddingTop="14dp"
                tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_row_a"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="vertical">

            <!-- Row 1 -->

            <TextView
                android:id="@+id/metapercent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/txt_percent_default"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtservice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/metapercent"
                android:gravity="center_vertical"
                android:text="@string/txt_service"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large"/>

            <TextView
                android:id="@+id/metarating"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txtservice"
                android:gravity="center_vertical"
                android:text="@string/txt_good"
                android:textColor="@color/green_normal"
                android:textSize="@dimen/font_xlarge"
                android:textStyle="bold|italic"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_row_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_row_a"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Row 2 -->

            <RatingBar
                android:id="@+id/servicebar"
                style="@style/CustomServiceBar"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/servicebar"
                android:drawSelectorOnTop="true"
                android:paddingTop="10dp"
                android:prompt="@string/spinner_default_txt"/>

        </RelativeLayout>

        <!-- Row 3 -->

        <TextView
            android:id="@+id/txtbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_row_b"
            android:layout_marginTop="20dp"
            android:text="@string/txt_bill"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"/>

        <EditText
            android:id="@+id/edittxtbill"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_row_b"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/txtbill"
            android:gravity="right"
            android:hint="@string/txt_hint"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/font_large">

            <requestFocus/>
        </EditText>

        <!-- Row 4 -->

        <TextView
            android:id="@+id/txttip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtbill"
            android:layout_marginTop="22dp"
            android:text="@string/txt_tip"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"/>

        <ToggleButton
            android:id="@+id/btntoggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtbill"
            android:layout_marginTop="16dp"
            android:onClick="toggleOnClickHandler"
            android:textOff="Round Off"
            android:textOn="Round On  "/>

        <TextView
            android:id="@+id/metatip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtbill"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:layout_toLeftOf="@id/btntoggle"
            android:layout_toRightOf="@id/txttip"
            android:maxLines="1"
            android:text="@string/txt_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"/>

        <!-- Row 5 -->

        <TextView
            android:id="@+id/txtshared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttip"
            android:layout_marginTop="27dp"
            android:text="@string/txt_shared"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"/>

        <TextView
            android:id="@+id/metanum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttip"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/txtshared"
            android:maxLines="1"
            android:minEms="2"
            android:text="@string/txt_num"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btndec"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txttip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/custom_button"
            android:text="@string/btn_dec"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btninc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="false"
            android:layout_below="@id/txttip"
            android:layout_marginTop="22dp"
            android:layout_toLeftOf="@id/btndec"
            android:background="@drawable/custom_button"
            android:text="@string/btn_inc"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"/>

        <!-- Row 6 -->

        <TextView
            android:id="@+id/txtperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtshared"
            android:layout_marginTop="22dp"
            android:text="@string/txt_person"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"/>

        <TextView
            android:id="@+id/metaperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtshared"
            android:layout_marginTop="22dp"
            android:maxLines="1"
            android:text="@string/txt_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"/>

        <!-- Row 7 -->

        <TextView
            android:id="@+id/txttotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtperson"
            android:layout_marginTop="22dp"
            android:text="@string/txt_total"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"/>

        <TextView
            android:id="@+id/metatotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtperson"
            android:layout_marginTop="22dp"
            android:maxLines="1"
            android:text="@string/txt_hint"
            android:textColor="@color/green_normal"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"/>

        <!-- Row 8 -->

        <Button
            android:id="@+id/btnclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txttotal"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/centerPoint"
            android:background="@drawable/custom_button"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/btn_clear"
            android:textColor="@color/black"
            android:textSize="@dimen/font_mediumlarge"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/centerPoint"
            android:layout_width="10dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttotal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:text=""/>

        <Button
            android:id="@+id/btnguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txttotal"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/centerPoint"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/btn_guide"
            android:textColor="@color/black"
            android:textSize="@dimen/font_mediumlarge"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8397256122648968/7826518012"/>
    </LinearLayout>

</RelativeLayout>